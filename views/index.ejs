<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Movies</title>
    <!-- <link rel="stylesheet" href="/styles/home.css"> -->
    <style>
      /* styles/home.css */
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
      }

      header {
        background-color: #333;
        color: white;
        padding: 10px;
        text-align: center;
      }

      #movies-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin: 20px;
      }

      .movie {
        background-color: white;
        border: 1px solid #ddd;
        border-radius: 5px;
        margin: 10px;
        padding: 15px;
        text-align: center;
        width: 250px;
        box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
      }

      .movie img {
        width: 100%;
        height: auto;
        border-radius: 5px;
      }

      .movie h2 {
        margin: 15px 0 10px 0;
        font-size: 20px;
      }

      .movie p {
        margin: 5px 0;
      }
    </style>
  </head>
  <body>
    <header>
      <h1>All Movies</h1>
    </header>

    <section id="movies-list"></section>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        fetch("/api/v1/movies")
          .then((response) => response.json())
          .then((result) => {
            console.log("Full response:", result); // Log the full response

            // Access the movies data from the 'data.movies' field
            const movies = result.data.movies;
            console.log("Movies data:", movies); // Log the movies array

            const moviesList = document.getElementById("movies-list");
            if (!moviesList) {
              console.error("movies-list element not found");
              return;
            }

            // Clear any previous content
            moviesList.innerHTML = "";

            // Loop through the movies array and create elements
            movies.forEach((movie) => {
              const movieDiv = document.createElement("div");
              movieDiv.classList.add("movie");

              movieDiv.innerHTML = `
                        <h2>${movie.name}</h2>
                        <p>${movie.description}</p>
                        <p>Rating: ${movie.rating}/10</p>
                    `;

              console.log("Appending movie:", movieDiv); // Log each movie div
              moviesList.appendChild(movieDiv);
            });
          })
          .catch((error) => console.error("Error fetching movies:", error));
      });
    </script>
  </body>
</html>
